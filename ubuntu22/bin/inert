#!/bin/bash

if [ -z "$1" ]
  then
    echo "inert -a ssh"
    exit
fi

while getopts "a:" opt; do
  case $opt in
    a) app+=("$OPTARG");;
    *) echo 'inert -a ssh' && exit 0 ;;
  esac
done
shift $((OPTIND -1))


sshInit(){
  python3 /var/inert/air/ssh.py
}

for a in "${app[@]}"; do
  case $a in
    ssh)
      sshInit
      ;;
  esac
done

